# Oncall Application Configuration
# Copy this file to .env and fill in your actual values

# Doorman Configuration
DOORMAN_BASE_URL=https://doorman.sgbank.pr
DOORMAN_USER=your-username
DOORMAN_PASSWORD=your-password
DOORMAN_TIMEOUT=30s
DOORMAN_RETRY_ATTEMPTS=3
DOORMAN_RETRY_DELAY=1s

# Jira Configuration
JIRA_BASE_URL=https://gxsbank.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_TOKEN=your-jira-api-token
JIRA_TIMEOUT=30s
JIRA_RETRY_ATTEMPTS=3
JIRA_RETRY_DELAY=1s

# Datadog Configuration
DATADOG_BASE_URL=https://api.datadoghq.com
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_TIMEOUT=30s
DATADOG_RETRY_ATTEMPTS=3
DATADOG_RETRY_DELAY=1s

# Storage Configuration (in-memory SQLite)
STORAGE_BASE_PATH=./data
STORAGE_MAX_SIZE=104857600
STORAGE_MAX_FILE_SIZE=1048576
STORAGE_COMPRESSION=true
STORAGE_ENCRYPTION=false
STORAGE_DEFAULT_TTL=24h
STORAGE_CLEANUP_INTERVAL=1h
# STORAGE_ENCRYPTION_KEY=your-32-character-encryption-key

# Application Configuration
APP_NAME=oncall
APP_VERSION=1.0.0
APP_DEBUG=false
APP_LOG_LEVEL=info
APP_TIMEOUT=30s